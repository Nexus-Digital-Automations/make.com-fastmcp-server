{
  "name": "make-fastmcp-server",
  "version": "1.0.0",
  "description": "FastMCP server for comprehensive Make.com API integration with platform management capabilities",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:prod": "tsc -p tsconfig.prod.json",
    "dev": "tsx src/index.ts --both",
    "dev:core": "tsx src/index.ts --core",
    "dev:analytics": "tsx src/index.ts --analytics",
    "dev:legacy": "tsx src/index.ts --legacy",
    "start": "node dist/index.js --both",
    "start:core": "node dist/index.js --core",
    "start:analytics": "node dist/index.js --analytics",
    "start:legacy": "node dist/index.js --legacy",
    "start:prod": "NODE_ENV=production node dist/index.js --both",
    "start:core:prod": "NODE_ENV=production node dist/index.js --core",
    "start:analytics:prod": "NODE_ENV=production node dist/index.js --analytics",
    "test": "node scripts/run-tests.js all",
    "test:unit": "node scripts/run-tests.js unit",
    "test:integration": "node scripts/run-tests.js integration",
    "test:e2e": "node scripts/run-tests.js e2e",
    "test:watch": "node scripts/run-tests.js all --watch",
    "test:coverage": "node scripts/run-tests.js all --coverage",
    "test:coverage:unit": "node scripts/run-tests.js unit --coverage",
    "test:coverage:integration": "node scripts/run-tests.js integration --coverage",
    "test:coverage:report": "npm run test:coverage && node scripts/coverage-report.js",
    "test:coverage:enforce": "node scripts/coverage-validator.js",
    "test:coverage:badge": "node scripts/generate-coverage-badge.js",
    "test:validate": "node scripts/run-tests.js validate",
    "test:browser": "node scripts/run-browser-tests.js all",
    "test:browser:staging": "node scripts/run-browser-tests.js staging",
    "test:browser:dashboard": "node scripts/run-browser-tests.js dashboard",
    "test:browser:debug": "node scripts/run-browser-tests.js debug",
    "test:browser:headed": "node scripts/run-browser-tests.js headed",
    "test:browser:report": "node scripts/run-browser-tests.js report",
    "test:performance": "node scripts/run-tests.js performance",
    "validate:scenarios": "node scripts/validation/run-all-validations.js",
    "validate:scenarios:quick": "node scripts/validation/run-all-validations.js --quick",
    "validate:scenarios:verbose": "node scripts/validation/run-all-validations.js --verbose",
    "validate:compatibility": "node scripts/validation/validate-scenarios-refactoring.js",
    "validate:regression": "node scripts/validation/regression-test.js",
    "config:validate": "node scripts/validate-config.js",
    "config:validate:verbose": "node scripts/validate-config.js --verbose",
    "config:report": "npm run build && node scripts/config-report.js",
    "config:report:json": "npm run build && node scripts/config-report.js --format=json",
    "config:test": "npm run config:validate && npm run config:report",
    "config:presets": "npm run build && node -e \"const { ConfigPresets } = require('./dist/lib/config.js'); console.log(JSON.stringify(ConfigPresets, null, 2));\"",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "inspect": "fastmcp inspect src/index.ts",
    "clean": "rimraf dist",
    "refactor:analyze": "node scripts/refactoring/refactoring-analyzer.js",
    "refactor:analyze:json": "node scripts/refactoring/refactoring-analyzer.js --output json",
    "refactor:analyze:markdown": "node scripts/refactoring/refactoring-analyzer.js --output markdown",
    "refactor:analyze:save": "node scripts/refactoring/refactoring-analyzer.js --output markdown --save refactoring-analysis.md",
    "refactor:generate": "node scripts/refactoring/module-generator.js",
    "refactor:dependencies": "madge --circular --extensions ts ./src",
    "refactor:complexity": "npx eslint --rule 'complexity: [\"error\", 15]' src/**/*.ts",
    "refactor:unused": "ts-unused-exports tsconfig.json",
    "refactor:validate": "npm run refactor:dependencies && npm run refactor:complexity && npm run refactor:unused",
    "analyze:all": "npm run refactor:analyze && npm run refactor:validate",
    "analyze:dependencies": "madge --extensions ts --image dependency-graph.svg ./src",
    "analyze:complexity": "npx eslint --rule 'complexity: [\"error\", 15]' --format json src/**/*.ts > complexity-report.json || echo 'Complexity issues found, check complexity-report.json'",
    "analyze:bundle": "npm run build && webpack-bundle-analyzer dist/bundle.js",
    "generate:module": "node scripts/refactoring/module-generator.js"
  },
  "keywords": [
    "mcp",
    "fastmcp",
    "make.com",
    "automation",
    "api",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/logging-winston": "^6.0.1",
    "axios": "^1.6.2",
    "bottleneck": "^2.19.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^17.2.1",
    "fastmcp": "^3.15.0",
    "fluent-logger": "^3.4.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "isomorphic-dompurify": "^2.26.0",
    "opossum": "^9.0.0",
    "otplib": "^12.0.1",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^7.2.0",
    "redis": "^5.8.2",
    "validator": "^13.15.15",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.55.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/opossum": "^8.1.9",
    "@types/validator": "^13.15.2",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.0.5",
    "jscodeshift": "^17.3.0",
    "madge": "^8.0.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.1",
    "ts-morph": "^26.0.0",
    "ts-unused-exports": "^11.0.1",
    "tsx": "^4.6.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
