{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "declarationMap": false,
    "removeComments": true,
    "skipLibCheck": true,
    "inlineSourceMap": false,
    "inlineSources": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/examples",
    "tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "examples/**/*",
    "scripts/**/*"
  ]
}